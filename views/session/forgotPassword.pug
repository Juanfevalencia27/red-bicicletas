style.
  .form-gap {
  padding-top: 70px;
  }
link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
.form-gap
  .container.py-5
    .row
      .col-md-6.col-md-offset-3
        .panel.panel-default
          .panel-body
            .text-center
              h3
                i.fa.fa-lock.fa-4x
              h2.text-center Forgot Password?
              p You can reset your password here.
              if(message)
                small#nombreHelp.text-danger
                  = message
              p.help-block.text-danger
              .panel-body
                form#register-form.form(role='form' autocomplete='off' action='/forgotPassword' method='post')
                  .form-group
                    .input-group
                      span.input-group-addon
                        i.glyphicon.glyphicon-envelope.color-blue
                      input#email.form-control(name='txtEmail' placeholder='email address' type='email')
                  .form-group
                    button.btn.btn-lg.btn-primary.btn-block(type='submit') Enviar
                  input#token.hide(type='hidden' name='token' value='')
                button.btn.btn-lg.btn-primary.btn-block(type='button' onclick="location.href = '/login';") Login
